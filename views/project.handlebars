

         <h1 class="text-center display-3 mt-3 project_page_title text-decoration-underline">{{project.project_name}} 
         </h1>
         <div class="d-flex justify-content-center ">
         <form class="newSongForm new_song_form col-5 shadow-lg p-3" data-projectid={{project.id}}>
          <div class=" text-left form-row align-items-center">
            <div class="col-auto">
              <h2 class="sr-only song_input_name" >Song Name:</h2>
              <input type="text" class="form-control mb-2" id="songName" placeholder="">
            </div>
            <div class="col-auto">

              <h4 class="sr-only" >Song Description:</h4>
              <div class="input-group mb-2">
                <input type="text" class="form-control" id="songDescription" placeholder="">
              </div>
            </div>
              <div class="col-auto">
              <h4 class="sr-only" >Song URL:</h4>
              <div class="input-group mb-2">
                <input type="text" class="form-control" id="rawUrl" placeholder="">
              </div>
            </div>
            </div>
            <div class="col-auto my-1 text-center">
              <button type="submit" for="newProjectForm" class="mb-2 new_song_button">
                Create New Song
              </button>
            </div>
          </div>
        </form>
        </div>

