


         <h1 class="text-center">All Projects</h1>
        <form class="newProjectForm ">
          <div class=" text-center form-row align-items-center">
            <div class="col-auto">
              <label class="sr-only" >Project Name</label>
              <input type="text" class="form-control mb-2" id="projectName" placeholder="">
            </div>
            <div class="col-auto">
              <label class="sr-only" >Project Description</label>
              <div class="input-group mb-2">
                <input type="text" class="form-control" id="projectDescription" placeholder="">
              </div>
            </div>
            </div>
            <div class="col-auto my-1 text-center">
              <button type="submit" for="newProjectForm" class=" btn btn-primary mb-2">Create New Project</button>
            </div>
          </div>
        </form>

       
  {{#if projects.length}}
         {{#each projects as |project|}}
        <li class="nav-item ">
          <div class="row ">
            <div class="col s12 m6">
              <div class="card blue-grey darken-1 text-center mt-3">
                <div class="card-header white-text fs-1 ">
                  <a href="/project/{{project.id}}">{{project.project_name}}</a>
                  </div>
                  <div class="card-body">
                  <p>{{project.project_description}}</p>
                </div>
                <div class="card-action">
                </div>
              </div>
            </div>
          </div>     
        </li>
           {{/each}}
             {{/if}}
<script src="/js/allprojects.js"></script>