

        
        
  <div class="d-flex justify-content-center ">
   <form class="newProjectForm new_project_form mt-3 col-8 shadow-lg p-3">
          <div class=" text-left form-row align-items-center">
            <div class="col-auto">
              <h1 class="new_project_name sr-only" >New Project Name:</h1>
              <input type="text" class="form-control mb-2" id="projectName" placeholder="">
            </div>
            <div class="col-auto">
              <h3 class="sr-only" >Project Description:</h3>
            <div class="input-group mb-2">
                <input type="text" class="form-control" id="projectDescription" placeholder="">
              </div>
            </div>
          </div>
            <div class="col-auto my-1 text-center">
              <button type="submit" for="newProjectForm" class=" mb-2 new_project_button">
                Create New Project
              </button>
            </div>
          </div>
        </form>  
        </div>     
        <h1 class="text-center text-decoration-underline all_titles mt-4">All Projects</h1>
  {{#if projects.length}}
         {{#each projects as |project|}}
        <div class="nav-item ">
          <div class="row ">
            <div class=" col s12 m6 ">
              <div class="card blue-grey darken-1 text-center mt-3 shadow-lg">
                <div class="project_name_bg card-header fs-1 ">
                  <a class="project_card_content" href="/project/{{project.id}}">{{project.project_name}}</a>
                </div>
                <div class="card-body">
                  <p>{{project.project_description}}</p>
                </div>
                <div class="card-action">
                </div>
              </div>
            </div>
          </div>     
        </div>
           {{/each}}
             {{/if}}

             
<script src="/js/allprojects.js"></script>