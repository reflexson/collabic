{{!-- {{#set 'title'}}Song Page{{/set}} --}}

<div class="text-center mt-2">
  <a type="button" href="/project/{{song.project_id}}" class="btn btn-secondary">Back to Project</a>
  </div>
  <h1 class="text-center">{{song.song_name}}</h1>

  <!-- Audio Player  -->
  <div class="mt-3" id="audioPlayer">
    <audio controls class="col-12" src={{song.song_url}}></audio>
  </div>
  
  <!-- Comment Form -->
  <div class="d-flex justify-content-center">
<form class="commentForm bg-secondary-subtle rounded col-10 shadow-lg mt-4 ps-4 pe-4"data-songid={{song.id}}>
  <h3 class="text-center commentForm fs-4">New Comment</h3>

  <div>
      <div class="row mt-3 mb-3 d-flex justify-content-center">
        <h4 class="fs-5 text-center text-secondary"></h4>
          <div class="col-6">
             <input id="author"type="text" class="form-control text-center " placeholder="Author">
          </div>
      </div>
      <div class="row mt-3 mb-3 d-flex justify-content-center">
        <h4 class="fs-5 text-center text-secondary">Timestamp</h4>
          <div class="col-3">
             <input id="cueMin"type="text" class="form-control text-center " placeholder="Min">
          </div>
          <div class="col-3">
              <input id="cueSec"type="text" class="form-control text-center" placeholder="Sec">
          </div>
      </div>
  </div>  
  <div class="form-group">
        <label for="comment">Comment:</label>
        <textarea id="commentText" class="form-control" rows="2"></textarea>
  </div>
  <div class="col-auto my-1 text-center">
      <button type="submit" class=" btn btn-primary mb-2">Submit</button>
  </div>
</form>
</div>
