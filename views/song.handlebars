    <div class=" d-flex justify-content-center">
    <textarea class="row"id="commentText" rows="4" placeholder="Write a comment"></textarea>
    <button class="row"type="submit" href="">Submit Comment</button>
    </div>
  </form> --}}

  <!-- Display comments -->
  <h2 class="text-center mt-4">Comments</h2>

    {{#if comments.length}}
         {{#each comments as |comment|}}
        <div class="nav-item ">
          <div class="row ">
            <div class="col s12 m6">
              <div class="card blue-grey darken-1 text-center mt-3">
                <div class="card-header bg-secondary text-white fs-4 ">
                  {{comment.comment_owner}} on {{format_date comment.comment_publishedTimestamp}}
                  </div>
                  <div class="card-body">
                  <p>{{comment.comment_description}}</p>
                        <div class="col-auto my-1 text-center">
                             <button id="5"onclick="setCurTime" type="submit" class=" btn btn-success mb-2">Cue Comment</button>
                        </div>
                </div>
                <div class="card-action">
                </div>
              </div>
            </div>
          </div>     
        </div>
           {{/each}}
             {{/if}}
  

  <script src="/js/song.js"></script>

